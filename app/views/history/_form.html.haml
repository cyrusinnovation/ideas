#idea_form.modal{:style => 'display:none'}
  .modal-header
    %a.close{:href => '#'}x
    %h3.title
  .modal-body
    =form_for :idea, :method => :put, :html => {:class => 'form-stacked'} do |f|
      %fieldset
        .clearfix.created_by
          != f.label :created_by
          != f.text_field :created_by, :class => 'span8'
          %span.help-inline
        .clearfix.title
          != f.label :title
          != f.text_field :title, :class => 'span8'
          %span.help-inline
        .clearfix.description
          != f.label :description
          != f.text_area :description, :class => 'span8'
          %span.help-inline
        .clearfix.category
          != f.label :category
          != f.select :category, (Category.all.collect {|c| [c.name, c.id]}), :class => 'span8'
          %span.help-inline
  .modal-footer
    != link_to 'Delete', '#', :method => :delete, :confirm => 'Are you sure you want to delete this idea?', :class => 'btn danger delete_button'
    %button.btn.primary.ajaxd Save
