.page-header
  %h1
    Forgot your password?

= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-stacked' }) do |f|
  = devise_error_messages!
  %fieldset
    .clearfix
      != f.label :email
      != f.email_field :email
  .actions
    != f.submit "Send me reset password instructions", :class => 'btn primary'
