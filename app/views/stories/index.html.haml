- form_for @new_story do |f|
  %table#stories
    %tr
      %th.title
        = f.label :title
      %th.estimate
        = f.label :estimate
      %th.started
        = f.label :started
      %th.finished
        = f.label :finished
      %th.cycle_time
        Cycle Time
      %th.actions
    %tr
      %td.title
        = f.text_field :title
      %td.estimate
        = f.text_field :estimate, :size => 4
      %td.started
        = f.date_select :started,
          :include_blank => true,
          :default => nil,
          :start_year => 2010,
          :order => [:day, :month, :year]
      %td.finished
        = f.date_select :finished,
          :include_blank => true,
          :default => nil,
          :start_year => 2010,
          :order => [:day, :month, :year]
      %td.cycle_time
        = f.submit 'Save'
      %td.actions
    - @stories.each do |story|
      %tr
        %td.title
          &= story.title
        %td.estimate
          &= story.estimate
        %td.started
          &= story.started
        %td.finished
          &= story.finished
        %td.cycle_time
          &= story.cycle_time
        %td.actions
          = link_to "Delete", story, :method => :delete, :confirm => 'Are you sure you want to delete this story?'
