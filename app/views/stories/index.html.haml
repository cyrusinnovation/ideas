- content_for :head do
  :javascript
    $(document).ready(function() {
      $('.subnav .estimates').addClass('active');

      $('#new_story').submit(function() {
        if ($('#story_title').val() == '') {
          $('#title_div').addClass('error');
          $('#title_div span').html('required');
          return false;
        }
        return true;
      });      
    });

- if flash.key? :notice
  .alert-message.success.fade.in{"data-alert" => "alert"}
    %a.close{:href=>"#"}
      x
    = flash[:notice]

%h2 Start a new estimate

= form_for [current_project, @story], :html => {:class => 'form-stacked'} do |f|
  %fieldset
    #title_div.clearfix
      != f.label :title
      != f.text_field :title, :class => 'span12'
      %span.help-inline 
    != f.submit 'Create', :class => 'btn primary'
