- content_for :head do
  != javascript_include_tag "jquery.tools.js"
  != javascript_include_tag 'estimation_view.js'

.page-header
  %h1
    - if @story
      Estimating "#{@story.title}"
    - else
      Estimation Examples


#estimation_view
  .items
    - @groups.each do |bucket, examples|
      .estimation-bucket
        .bucket
          .bucket-info
            != "#{bucket.pretty_print_html}"
          .time-range
            != range_html(bucket)
          - if @story
            = form_for [current_project, @story] do |f|
              != f.hidden_field :title
              != f.hidden_field :estimate, :value => bucket.value
              %button.btn.info.smaller-button Smaller
              != f.submit "Just right", :class => 'btn success right-button'
              %button.btn.info.bigger-button Bigger
        
        .stories
          %ul.unstyled
            - examples.each do |example|
              %li.story
                .title
                  = example.title
.row
  #recent_stories.navi.well.span7
    %h2 recently estimated...
    %ul.unstyled
      - @recent_stories.each do |story|
        - bucket = story.bucket
        %li.story
          .title
            %a{:href=>'#', :class=>'scrollto', :estimate_index=> story.bucket.my_index } 
              != "#{story.title} @#{story.bucket.pretty_print_html}"
  #all_buckets.navi.well.span7
    %h2 all buckets
    %ul.unstyled
      - @groups.each do |bucket, examples|
        %li.story
          .title
            %a{:href=>'#', :class=>'scrollto', :estimate_index=> bucket.my_index } 
              != bucket.pretty_print_html
              %em
                != range_html(bucket)

