- if story != @editable_story
  %tr
    %td.title
      &= story.title
    %td.estimate
      &= story.estimate
    %td.started
      &= story.started
    %td.finished
      &= story.finished
    %td.cycle_time
      &= story.cycle_time
    %td.actions
      = link_to 'Edit', edit_story_url(story)
      = link_to 'Delete', story, :method => :delete, :confirm => 'Are you sure you want to delete this story?'
- else
  - form_for @editable_story do |f|
    %tr
      %td.title
        = f.text_field :title
      %td.estimate
        = f.text_field :estimate, :size => 4
      %td.started
        = f.date_select :started,
          :include_blank => true,
          :default => nil,
          :start_year => 2010,
          :order => [:day, :month, :year]
      %td.finished
        = f.date_select :finished,
          :include_blank => true,
          :default => nil,
          :start_year => 2010,
          :order => [:day, :month, :year]
      %td.cycle_time
      %td.actions
        = f.submit 'Save'
