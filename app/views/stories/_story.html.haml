- if story != @editable_story
  %tr{:class => cycle('odd', 'even')}
    %td.title
      != format_title story.title
    %td.estimate
      = format_estimate story.estimate
    %td.started
      = format_date story.started
    %td.finished
      = format_date story.finished
    %td.cycle_time
      = story.cycle_time
    %td.hours_worked
      = story.hours_worked
    %td.actions
      != link_to 'Edit', edit_story_path(story)
      |
      != link_to 'Delete', story, :method => :delete, :confirm => 'Are you sure you want to delete this story?'
- else
  =form_for @editable_story do |f|
    %tr{:class => cycle('odd', 'even')}
      %td.title
        != f.text_field :title, :size => 60
      %td.estimate
        != f.text_field :estimate, :size => 4
      %td.started
        != f.date_select :started, :start_year => 2010, :order => [:day, :month, :year]
      %td.finished
        != f.date_select :finished, :start_year => 2010, :order => [:day, :month, :year]
      %td.cycle_time
        \...
      %td.hours_worked
        != f.text_field :hours_worked, :size => 4
      %td.actions
        != f.submit 'Save'
