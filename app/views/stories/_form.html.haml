=form_for @story, :html => {:class => 'form-stacked'} do |f|
  %fieldset
    .clearfix
      != f.label :title
      != f.text_field :title, :size => 60
    .clearfix
      != f.label :estimate
      != f.text_field :estimate, :size => 4
    .clearfix
      != f.label :started
      != f.date_select :started, :start_year => 2010, :order => [:day, :month, :year]
    .clearfix
      != f.label :finished
      != f.date_select :finished, :start_year => 2010, :order => [:day, :month, :year]
    .clearfix
      != f.label :hours_worked
      != f.number_field :hours_worked, :size => 4
  .actions
    != f.submit 'Save', :class => 'btn primary'
    -if @story.persisted? 
      != link_to 'Delete', @story, :method => :delete, :confirm => 'Are you sure you want to delete this estimate?', :class => 'btn danger'
    