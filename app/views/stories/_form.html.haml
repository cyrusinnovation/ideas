=form_for [current_project, @story], :html => {:class => 'form-stacked'} do |f|
  %fieldset
    .clearfix
      != f.label :title
      != f.text_field :title, :size => 60
    .clearfix
      != f.label :estimate
      != f.text_field :estimate, :size => 4
    .clearfix
      != f.label :finished
      != f.text_field :finished, :value => (f.object.finished.blank? ? '' : f.object.finished.strftime('%m/%d/%Y'))
    .clearfix
      != f.label :hours_worked
      != f.number_field :hours_worked, :size => 4
  .actions
    != f.submit 'Save', :class => 'btn primary'
    -if @story.persisted? 
      != link_to 'Delete', [current_project, @story], :method => :delete, :confirm => 'Are you sure you want to delete this estimate?', :class => 'btn danger'
:javascript
  $('#story_finished').datepicker({dateFormat: 'mm/dd/yy'});
