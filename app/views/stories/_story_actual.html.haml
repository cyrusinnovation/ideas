%tr
  %td.title
    != link_to format_title(story_actual.title), '#', :class=>'expand'
    .form{:style => 'display:none;'}
      =form_for story_actual, :html => {:class => 'form-stacked'} do |f|
        %fieldset
          .clearfix
            != f.label :finished
            != f.text_field :finished, :id => "story_finished_#{story_actual.id}", :class => 'date_picker'
          .clearfix
            != f.label :hours_worked
            != f.number_field :hours_worked, :size => 4
        != f.submit 'Save', :class => 'btn primary'
        != link_to 'Delete', story_actual, :method => :delete, :confirm => 'Are you sure you want to delete this estimate?', :class => 'btn danger'
