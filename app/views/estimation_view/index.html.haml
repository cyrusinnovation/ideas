- content_for :head do
  :javascript
    $(document).ready(function() {
      $('.nav .tool').addClass('active');
    });

.page-header
  %h1
    Tool
.row
  .span14
    #estimation_view
      - @groups.each do |group|
        %ul.group
          %h2
            = heading(group)
          - group.each do |story|
            %li.story
              .title
                = story.title
              .estimate
                != story.under_or_over_html
                %span.calculated
                  = story.estimate
