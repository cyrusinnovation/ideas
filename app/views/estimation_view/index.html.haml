- content_for :head do
  :css
    .time-range {
        font-size: 12px;
    }
  != javascript_include_tag 'estimation_view.js'

.page-header
  %h1
    - if @story
      Estimating "#{@story.title}"
    - else
      Estimation Examples

#estimation_view
  - @groups.each do |bucket, examples|
    .row.estimation-bucket{:class => bucket}
      .span3
        %h2
          != "#{bucket_display bucket}"
          .time-range
            = "About #{min_html bucket}"
            &ndash;
            = "#{max_html bucket}"
          - if @story
            = form_for @story do |f|
              != f.hidden_field :title
              != f.hidden_field :estimate, :value => bucket
              != f.submit "Smaller", :class => 'btn info'
              != f.submit "Just right", :class => 'btn success'
              != f.submit "Bigger", :class => 'btn info'
        
      .span13
        %ul.group
          - examples.each do |example|
            %li.story
              .title
                = example.title
    %hr
