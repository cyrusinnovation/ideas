- content_for :head do
  :css
    .time-range {
        font-size: 12px;
    }
  != javascript_include_tag "http://cdn.jquerytools.org/1.2.6/jquery.tools.min.js"
  != javascript_include_tag 'estimation_view.js'

.page-header
  %h1
    - if @story
      Estimating "#{@story.title}"
    - else
      Estimation Examples

#estimation_view
  .items
    - @groups.each do |bucket, examples|
      .estimation-bucket
        .bucket
          %h2
            .bucket-info
              != "#{bucket_display bucket}"
              .time-range
                = "About #{min_html bucket}"
                &ndash;
                = "#{max_html bucket}"
            - if @story
              = form_for @story do |f|
                != f.hidden_field :title
                != f.hidden_field :estimate, :value => bucket
                != f.submit "Smaller", :class => 'btn info smaller-button'
                != f.submit "Just right", :class => 'btn success right-button'
                != f.submit "Bigger", :class => 'btn info bigger-button'
        
        .stories
          %ul.group
            - examples.each do |example|
              %li.story
                .title
                  = example.title

