#average_cycle_time
  %h2 Averages
  %table
    %tr
      %th.estimate_group
        Estimate <br> Group
      %th.newest_10
        Newest 10
      %th.newest_30
        Newest 30
      %th
        History
      %th.all
        All
    - @estimate_groups.each do |group|
      %tr{:class => cycle('odd', 'even')}
        %td.estimate_group
          = group.title
        %td.newest_10
          != group.average.first(10).to_html
        %td.newest_30
          != group.average.first(30).to_html
        %td
          != sparkline group
        %td.all
          != group.average.to_html

!= render :partial => 'team_navigation'

%table#cycle_time
  %tr
    %th.story Story
    %th.points Points
    %th.date Started
    %th.date Finished
    %th.time Cycle Time
    %th.time Days for <br> Last 5 Points
    %th.time Days for <br> Last 15 Points
    %th.time Days for <br> Last 5 Stories
    %th.time Days for <br> Last 15 Stories
  - @cycle_times.each do |cycle_time|
    %tr{:class => cycle('odd', 'even')}
      %td.story
        != format_title cycle_time.story
      %td.points
        = format_estimate cycle_time.story_points
      %td.date
        = format_date cycle_time.started
      %td.date
        = format_date cycle_time.finished
      %td.time
        = cycle_time.for_story
      %td.time
        = cycle_time.for_points 5
      %td.time
        = cycle_time.for_points 15
      %td.time
        = cycle_time.for_stories 5
      %td.time
        = cycle_time.for_stories 15
