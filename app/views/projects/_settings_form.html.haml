.modal.hide{:id => 'settingsModal'+project.id.to_s, :style => 'top:300px;'}
  .modal-header
    %button.close{:data=> {:dismiss=>"modal"}}
      x
    %h3= "Project Settings"
  =form_tag(project_update_settings_path(project), :method => :post) do
    .modal-body
      %fieldset
        %div{:class => div_class(project, :name)}
          = label :name, 'Project Name'
          = text_field_tag :name, project.name
          %span.help-inline
            = inline_help project, :name

    .modal-footer
      = link_to "Delete this project", current_project, :confirm => "Are you sure?", :method => :delete, :class => 'btn btn-danger'
      = link_to 'Cancel', '#', :class => "btn submit-button-secondary submit-button-delete", :data=> {:dismiss=>"modal"}
      = submit_tag 'Save', :class => 'btn btn-primary'