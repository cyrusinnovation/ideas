!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
      %title Idea Tracker
      / Le HTML5 shim, for IE6-8 support of HTML elements
      /[if lt IE 9]
        != javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
      != stylesheet_link_tag "application"
      != javascript_include_tag "application"
      :css
        .main-container {
            margin-top: 50px;
        }
        .content {
          clear:both;
        }
        footer p {
          text-align: center;
        }
      != yield :head
  %body
    .topbar
      .fill
        .container
          != link_to 'orso', root_path, :class => 'brand'
          -if user_signed_in?
            %ul.nav
              %li.dropdown{"data-dropdown" => "dropdown"}
                != link_to project_dropdown_title, '#', :class => 'dropdown-toggle'
                %ul.dropdown-menu
                  - project_dropdown_projects.each do |project|
                    %li
                      != link_to project.name, project_ideas_path(project)
                  %li.divider
                  %li
                    != link_to 'New Project', new_project_path
            .pull-right
              %ul.rightnav
                %li.dropdown{"data-dropdown" => "dropdown"}
                  != link_to current_user.email, '#', :class => 'dropdown-toggle'
                  %ul.dropdown-menu
                    %li
                      != link_to 'Account', edit_user_registration_path, :target => '_blank'
                    %li.divider
                    %li
                      != link_to "Sign out", destroy_user_session_path, :method => :delete
          -else
            = form_for(:user, :as => 'user', :url => session_path(:user), :html => {:class => 'pull-right'}) do |f|
              = f.email_field :email, :class => 'input-small'
              = f.password_field :password, :class => 'input-small'
              / = f.check_box :remember_me
              %button.btn{:type => "submit"} Sign in
    .container.main-container
      -if in_project?
        %ul.tabs.subnav
          %li.estimates
            != link_to 'Estimates', project_ideas_path(current_project)
          %li.history
            != link_to 'History', project_history_path(current_project)
          %li.settings
            != link_to 'Settings', project_edit_settings_path(current_project)
          %li.collaborate
            != link_to 'Collaborators', project_memberships_path(current_project)
        
      .content
        - if flash.key? :alert
          .alerts
            .alert-message.error.fade.in{"data-alert" => "alert"}
              %a.close{:href=>"#"}
                x
              = flash[:alert]
        != yield

      %footer
        %p 
          orso is a 
          != link_to "Cyrus Innovation", "http://www.cyrusinnovation.com"
          product 
