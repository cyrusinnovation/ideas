!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
      %title orso
      / Le HTML5 shim, for IE6-8 support of HTML elements
      /[if lt IE 9]
        != javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
      %link{:href => "/stylesheets/bootstrap/bootstrap.less", :rel => "stylesheet/less", :type => "text/css"}
      != stylesheet_link_tag "screen"
      != javascript_include_tag :defaults
      != javascript_include_tag 'less-1.1.3.min.js'
      != javascript_include_tag 'bootstrap/bootstrap-alert.js'

      :javascript
        var uvOptions = {};
        (function() {
          var uv = document.createElement('script'); uv.type = 'text/javascript'; uv.async = true;
          uv.src = ('https:' == document.location.protocol ? 'https://' : 'http://') + 'widget.uservoice.com/wsxF9xBuFu4cZh8nSmoKw.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(uv, s);
        })();

      != yield :head
  %body
    .topbar
      .fill
        .container
          != link_to 'orso', root_path, :class => 'brand'
          -if user_signed_in?
            %ul.nav
              %li.estimates
                != link_to 'Estimates', stories_path
              %li.reports
                != link_to 'Trends', trends_path            
              %li.settings
                != link_to 'Settings', edit_settings_path            
          -if user_signed_in?
            %p.pull-right
              #{current_user.email}
              != link_to "Sign out", destroy_user_session_path, :method => :delete
          -else
            = form_for(:user, :as => 'user', :url => session_path(:user), :html => {:class => 'pull-right'}) do |f|
              = f.email_field :email, :class => 'input-small'
              = f.password_field :password, :class => 'input-small'
              / = f.check_box :remember_me
              %button.btn{:type => "submit"} Sign in
    .container.main-container
      .content
        != yield

      %footer
        %p 
          orso is a 
          != link_to "Cyrus Innovation", "http://www.cyrusinnovation.com"
          product 
          |
          != link_to "privacy policy", privacy_path
