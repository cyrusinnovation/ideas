!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
      %title Orso
      / Le HTML5 shim, for IE6-8 support of HTML elements
      /[if lt IE 9]
        != javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
      %link{:href => "stylesheets/bootstrap/bootstrap.less", :rel => "stylesheet/less", :type => "text/css"}
      != stylesheet_link_tag "bootstrap.less", :rel => 'stylesheet.less'
      != stylesheet_link_tag "screen"
      != javascript_include_tag 'less-1.1.3.min.js'

  %body
    .topbar
      .fill
        .container
          %a.brand{:href => "#"} orso
          -if user_signed_in?
            %ul.nav
              %li
                != link_to 'Tool', estimation_view_path
              %li
                != link_to 'Estimates', stories_path
              %li
                != link_to 'Reports', burn_rate_path            
          -if user_signed_in?
            %p.pull-right
              #{current_user.email}
              != link_to "Sign out", destroy_user_session_path, :method => :delete
          -else
            = form_for(:user, :as => 'user', :url => session_path(:user), :html => {:class => 'pull-right'}) do |f|
              = f.email_field :email, :class => 'input-small'
              = f.password_field :password, :class => 'input-small'
              / = f.check_box :remember_me
              %button.btn{:type => "submit"} Sign in
    .container.main-container
      .content
        .page-header
          %h1
            orso
        .row
          .span14
            != yield

      %footer
        %p orso is a cyrusinnovation product
    / /container