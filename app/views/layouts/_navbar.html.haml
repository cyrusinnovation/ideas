.navbar
  .navbar-inner
    .container
      != link_to 'ideas', root_path, :class => 'brand'
      -if user_signed_in?
        %ul.nav
          %li.dropdown
            != link_to 'Projects', '#', :class => 'dropdown-toggle', data: {toggle: 'dropdown'}
            %ul.dropdown-menu
              %li
                != link_to 'View Ideas by Project', projects_path
              %li
                != link_to 'View all Ideas', ideas_path
              %li.divider
              %li
                != link_to 'New Project', new_project_path
        %ul.nav.pull-right
          %li.dropdown
            != link_to indicate_dropdown(current_user.email), '#', :class => 'dropdown-toggle', data: {toggle: 'dropdown'}
            %ul.dropdown-menu
              %li
                != link_to "Sign out", destroy_user_session_path, :method => :delete