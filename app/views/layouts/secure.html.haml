%html
  %head
    %title 
    %link{:href => "http://fonts.googleapis.com/css?family=PT+Sans:regular,bold", :rel => "stylesheet"}
    != stylesheet_link_tag 'whitelabel/style'
    != stylesheet_link_tag 'whitelabel/light/theme', :id => 'themestyle'
    /
      [if lt IE 9]
      %script{:src => "http://html5shim.googlecode.com/svn/trunk/html5.js"}
      %link{:href => "stylesheets/whitelabel/css/ie.css", :rel => "stylesheet"}
    
    / Apple iOS and Android stuff
    %meta{:content => "no", :name => "apple-mobile-web-app-capable"}
    %meta{:content => "black", :name => "apple-mobile-web-app-status-bar-style"}
    / %link{:href => "apple-touch-icon-precomposed.png", :rel => "apple-touch-icon-precomposed"}
    / Apple iOS and Android stuff - don't remove!
    %meta{:content => "width=device-width,initial-scale=1,user-scalable=no,maximum-scale=1", :name => "viewport"}
    / Use Google CDN for jQuery and jQuery UI
    %script{:src => "http://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js"}
    %script{:src => "https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.12/jquery-ui.min.js"}
    / Loading JS Files this way is not recommended! Merge them but keep their order
    / some basic functions
    != javascript_include_tag "whitelabel/functions.js"

    / all Third Party Plugins
    / != javascript_include_tag "whitelabel/plugins.js"
    / != javascript_include_tag "whitelabel/editor.js"
    / != javascript_include_tag "whitelabel/calendar.js"
    / != javascript_include_tag "whitelabel/flot.js"
    / != javascript_include_tag "whitelabel/elfinder.js"
    / != javascript_include_tag "whitelabel/datatables.js"

    / all Whitelabel Plugins
    / != javascript_include_tag "whitelabel/wl_Alert.js"
    / != javascript_include_tag "whitelabel/wl_Autocomplete.js"
    / != javascript_include_tag "whitelabel/wl_Breadcrumb.js"
    / != javascript_include_tag "whitelabel/wl_Calendar.js"
    / != javascript_include_tag "whitelabel/wl_Chart.js"
    / != javascript_include_tag "whitelabel/wl_Color.js"
    / != javascript_include_tag "whitelabel/wl_Date.js"
    / != javascript_include_tag "whitelabel/wl_Editor.js"
    / != javascript_include_tag "whitelabel/wl_File.js"
    / != javascript_include_tag "whitelabel/wl_Dialog.js"
    / != javascript_include_tag "whitelabel/wl_Fileexplorer.js"
    / != javascript_include_tag "whitelabel/wl_Form.js"
    / != javascript_include_tag "whitelabel/wl_Gallery.js"
    / != javascript_include_tag "whitelabel/wl_Number.js"
    / != javascript_include_tag "whitelabel/wl_Password.js"
    / != javascript_include_tag "whitelabel/wl_Slider.js"
    / != javascript_include_tag "whitelabel/wl_Store.js"
    / != javascript_include_tag "whitelabel/wl_Time.js"
    / != javascript_include_tag "whitelabel/wl_Valid.js"
    / != javascript_include_tag "whitelabel/wl_Widget.js"

    / configuration to overwrite settings
    / != javascript_include_tag "whitelabel/config.js"

    / the script which handles all the access to plugins etc...
    != javascript_include_tag "whitelabel/script.js"
    
    /!= stylesheet_link_tag 'styles'
    /!= stylesheet_link_tag 'print', :media => 'print'
    
    != javascript_include_tag 'application'
    != javascript_include_tag 'jquery_ujs'
    != include_visualization_api
    != render_visualizations
    != javascript_include_tag 'jquery.sparkline.min'
    :javascript
      jQuery(function() {
        jQuery('.sparkline').sparkline('html', { enableTagOptions: true });
      });
  %body

    %div#pageoptions
    
    %header
      %div#logo
        %h1 Pointilist
      
      %div#header
        %p{:class=> 'notice'}
          != notice
        %p{:class=> 'alert'}
          != alert
          Signed in as #{current_user.email}. Not you? #{link_to "Sign out", destroy_user_session_path, :method => :delete}
        %ul#headernav

      %div#searchbox

    %nav
      %ul#nav
        %li
          != link_to 'Stories', stories_path
        %li
          != link_to 'Burn Rate', burn_rate_path
        %li
          != link_to 'Estimation View', estimation_view_path
        %li
          != link_to 'Import', new_import_path

    %section#content
      != yield
    
    %footer
