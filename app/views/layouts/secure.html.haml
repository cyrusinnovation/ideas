%html
  %head
    %title 
      orso

    = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'

    != javascript_include_tag :defaults
    != javascript_include_tag 'jquery.sparkline.min'
    :javascript
      $(document).ready(function() {
        $('.sparkline').sparkline('html', { enableTagOptions: true });
        $('#username').click(function() {
          $('#signout').toggle();
        });
      });
  %body
    %div#container
      %div#header
        %span#logo
          != link_to 'orso', root_path
        %ul#nav
          %li
            != link_to 'Tool', estimation_view_path
          %li
            != link_to 'Estimates', stories_path
          %li
            != link_to 'Reports', burn_rate_path
        %div#user
          %div#username
            #{current_user.email}
          %div#signout
            != link_to "Sign out", destroy_user_session_path, :method => :delete
            
      %div#sidebar
        != yield :nav
      
      %div#content
        - if notice
          %p{:class=> 'notice'}
            != notice
        - if alert
          %p{:class=> 'alert'}
            != alert

        != yield

      %div#footer
        orso is a cyrusinnovation product
