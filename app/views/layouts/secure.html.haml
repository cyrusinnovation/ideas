%html
  %head
    %title 
      orso
    
    != stylesheet_link_tag 'styles'
    != stylesheet_link_tag 'print', :media => 'print'
    
    != javascript_include_tag :defaults
    != javascript_include_tag 'jquery.sparkline.min'
    :javascript
      jQuery(function() {
        jQuery('.sparkline').sparkline('html', { enableTagOptions: true });
      });
  %body

    %header
      %div#logo
        != link_to 'orso', root_path 
      
      %div#header
        %ul#headernav
          %li
            %ul
              %li
                != link_to 'Estimation Tool', estimation_view_path
              %li
                != link_to 'Record Estimates', stories_path
              %li
                != link_to 'Reports', burn_rate_path
              %li
                %a{:href => "#"} #{current_user.email}
                %ul
                  %li 
                    != link_to "Sign out", destroy_user_session_path, :method => :delete

    %nav
      != yield :nav

    %section#content
      %p{:class=> 'notice'}
        != notice
      %p{:class=> 'alert'}
        != alert
    
      != yield
    
    %footer
